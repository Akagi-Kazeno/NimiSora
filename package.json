{
  "name": "nimisora",
  "version": "1.0.0",
  "main": "dist/main.js",
  "license": "MIT",
  "description": "Electron application with Angular frontend",
  "scripts": {
    "dev": "cd ui && ng build && npm run unocss:build && node ./patch-base-href.js && cd .. && tsc && electron ./dist/main.js",
    "build": "cd ui && ng build --configuration production && npm run unocss:build && node ./patch-base-href.js && cd .. && tsc && electron-forge make",
    "electron:start": "tsc && electron ./dist/main.js",
    "package:linux-arm64": "npx electron-forge make --platform=linux --arch=arm64",
    "package:linux-x64": "npx electron-forge make --platform=linux --arch=x64",
    "package:mac-arm64": "npx electron-forge make --platform=darwin --arch=arm64",
    "package:mac-x64": "npx electron-forge make --platform=darwin --arch=x64",
    "package:win-arm64": "npx electron-forge make --platform=win32 --arch=arm64",
    "package:win-ia32": "npx electron-forge make --platform=win32 --arch=ia32",
    "package:win-x64": "npx electron-forge make --platform=win32 --arch=x64",
    "postbuild": "node ./ui/patch-base-href.js"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "sequelize": "^6.37.7",
    "sqlite3": "^5.1.7",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "electron": "^36.5.0",
    "typescript": "^5.8.3"
  },
  "config": {
    "forge": {
      "makers": [
        {
          "name": "@electron-forge/maker-deb",
          "platforms": [
            "linux"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-dmg",
          "platforms": [
            "darwin"
          ],
          "config": {}
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "win32"
          ],
          "config": {}
        }
      ]
    }
  }
}
